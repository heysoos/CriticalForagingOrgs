    # ax.fill_between(iter_list, maxF, minF,
    #                 color=np.divide(c, 2), alpha=a)

    sigmaF = FOOD.std(axis=1)
    ax.fill_between(iter_list, muF + sigmaF, muF - sigmaF,
                    color=c, alpha=a
                    )

custom_legend = [Line2D([0], [0], marker='o', color='w',
