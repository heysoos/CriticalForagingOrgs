    # c = norm[i]
    # c = norm[IC[i]]

    muF = np.mean(FOOD, axis=1)
    ax.plot(iter_list, muF, color=c, label=labels[new_order[i]])

    # for numOrg in range(FOOD.shape[1]):
    #     ax.scatter(iter_list, FOOD[:, numOrg],
